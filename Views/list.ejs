<%- include("header"); -%>

<body>
    <div class="box" id="heading">
        <h1><%= listTitle %> </h1>
    </div>
    <div class="box">

        <% items.forEach(element => { %>
        <form action="/delete" method="POST">
            <div class="item">
                <input name="delTodo" type="checkbox" value="<%=element._id%>" onchange="this.form.submit()">
                <p><%= element.name %> </p>
            </div>
            <input type="hidden" name="listName" value="<%=listTitle%>">
        </form>
        <% }) %>
        <form class="item" method="post">
            <input type="text" name="newTodo" placeholder="new item">
            <button type="submit" name="">+</button>
        </form>
    </div>
</body>
<%- include("footer") -%>
